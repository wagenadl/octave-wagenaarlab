%1

% Search installed packages
pkgs = pkg("list");
pkginfo = pkgs(cellfun(@(x) ismember(x.name, {"wagenaarlab"}), pkgs));

if isempty(pkginfo)
  % The package is not installed yet
  % Where are we?
  [here, n, e, v] = fileparts(canonicalize_file_name(mfilename("fullpath")));
  pp = strsplit(here, filesep())
  [a, b] = pkg("prefix");
  pkgdir = [a filesep pp{end}];
  bindir = [b filesep pp{end}];
else
  pkgdir = pkginfo{1}.dir;
  bindir = pkginfo{1}.archprefix;
end

rmpath(genpath(pkgdir));
rmpath(genpath(bindir));

